<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with 80dp top space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <!-- Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_input_add"
                android:tint="#4CAF50"
                android:layout_marginBottom="12dp"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Product"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="6dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill in the details below"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Product Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="Product Name"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#4CAF50"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:startIconTint="#4CAF50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Product Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="Description"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#4CAF50"
                    app:startIconDrawable="@android:drawable/ic_menu_info_details"
                    app:startIconTint="#4CAF50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top|start"
                        android:textSize="16sp"
                        android:minHeight="100dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Product Price -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="Price (৳)"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#4CAF50"
                    app:prefixText="৳ "
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="#4CAF50"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Product Image Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Image"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawableStart="@android:drawable/ic_menu_camera"
                    android:drawablePadding="8dp"
                    android:drawableTint="#4CAF50"
                    android:layout_marginBottom="12dp"/>

                <!-- Select Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectImage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Choose from Gallery"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#9C27B0"
                    app:icon="@android:drawable/ic_menu_gallery"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.Button.Icon"/>

                <!-- Image Preview Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="#757575"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconTint="#757575"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Add Product Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddProduct"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Add Product"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                style="@style/Widget.Material3.Button.Icon"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>