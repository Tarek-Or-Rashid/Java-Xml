<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- Modern Gradient Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient"
        android:elevation="4dp"
        android:paddingTop="50dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp"
                android:alpha="0.95"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Products"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your inventory"
                    android:textSize="13sp"
                    android:textColor="#E3F2FD"
                    android:alpha="0.9"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#FFFFFF"
                android:alpha="0.9"/>

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView with spacing -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/cvProductCount"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"/>

    <!-- Beautiful Empty State -->
    <LinearLayout
        android:id="@+id/tvNoProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <!-- Empty State Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"
                android:tint="#BDBDBD"
                android:alpha="0.6"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Products Yet"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start building your inventory\nby adding your first product"
            android:textSize="15sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="28dp"/>

        <!-- Call to Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddFirstProduct"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Add Your First Product"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#2196F3"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:elevation="6dp"
            style="@style/Widget.Material3.Button.Icon"/>

    </LinearLayout>

    <!-- Black Footer Bar (30dp) -->
    <View
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"/>

    <!-- Product Count Card Above Footer -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footerBar"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF">

            <!-- Icon Circle -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E3F2FD">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="#2196F3"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Products"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tvProductCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Status Badge -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>